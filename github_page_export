import shutil
# from os import listdir
# from os.path import isfile, joim
from os import walk
from distutils.dir_util import copy_tree
f = []
for (dirpath, dirnames, filenames) in walk("./temp"):
    f.extend(filenames)
    break

# copy_tree("./temp", "./public/temp/")

links = ""
for file in f:
    links = links + r'<a href = "./temp/' + file + r'">' + file + "</a>"


index_html = "<html><head><title>Recepty</title></head><body><h2>RECEPTY z 'PEČE CELÁ ZEMĚ'</h2>" + links + "</body></html>"

index = open("docs/public/index.html", "w", encoding="utf-8")
index.write(index_html)
index.close()
